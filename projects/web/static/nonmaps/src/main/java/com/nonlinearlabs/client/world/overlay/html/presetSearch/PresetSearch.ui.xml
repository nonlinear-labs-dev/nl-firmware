<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<g:HTMLPanel>
		<div class="dialogcontainer">
			<div class="forms-container">
				<div class="mt1"></div>
				<div class="eins-he">
					<div class="w70p">
					  <g:TextBox ui:field="search" styleName="editable w100 txt-oneline gwt-TextBox"></g:TextBox>
					  <g:Button  ui:field="resetQuery" styleName="reset"></g:Button>
					</div>
					<div>
					    <g:Label ui:field="numMatches" styleName="h-blau padd-left"></g:Label>
					</div>
				</div><!-- end eins-he -->

				<div class="eins-he">
					<div class="w100p">
						<p>
						    <g:RadioButton ui:field="logicalAnd" text="And" name="logic"></g:RadioButton>
						    <g:RadioButton ui:field="logicalOr" text="Or" name="logic"></g:RadioButton>							
						</p>
					</div>
				</div><!-- end eins-he -->

				<div class="linie"></div>

				<div class="halb-he mb0">
					<div class="w100p">
						<p class="h-blau">Search in:</p>
					</div>
				</div><!-- end he -->

				<div class="eins-he">
					<div class="w100p">
						<p>
							<g:CheckBox ui:field="searchCriteriaName" text="Name"></g:CheckBox>
							<g:CheckBox ui:field="searchCriteriaComment" text="Comment"></g:CheckBox>
							<g:CheckBox ui:field="searchCriteriaDeviceName" text="Device Name"></g:CheckBox>
						</p>
					</div>
				</div><!-- end he -->

				<div class="linie"></div>

				<div class="eins-he">
					<div class="w100p">
						<g:CheckBox ui:field="zoomToAllMatches" text="Zoom to all matches"></g:CheckBox>
						<g:CheckBox ui:field="loadPreset" text="Load Highlighted Preset"></g:CheckBox>
					</div>
				</div><!-- end eins-he -->

				<div class="linie"></div>

				<div class="eineinhalb-he">
					<div class="w100p prev-next-buttons">
					    <g:Button ui:field="prev" text="Previous"></g:Button>
					    <g:Button ui:field="next" text="Next"></g:Button>
					</div>
				</div><!-- end eins-he -->

			</div><!-- end forms container -->
		</div><!-- end ui container -->

		<div class="clear"></div>


	</g:HTMLPanel>
</ui:UiBinder>