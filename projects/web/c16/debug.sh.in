set -e

useradd -u ${USER_ID} bob-the-builder

BOBS_SCRIPT=$(cat <<'END_HEREDOC'
set -e
cd /home/bob-the-builder/meteor-build
export PATH=/home/bob-the-builder/.meteor/:$PATH
rm -rf /home/bob-the-builder/meteor-build/client
ln -s /src/src /home/bob-the-builder/meteor-build/client
meteor --port 0.0.0.0:3000
