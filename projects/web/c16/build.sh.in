set -e

useradd -u ${USER_ID} bob-the-builder

BOBS_SCRIPT=$(cat <<'END_HEREDOC'
set -e
cd /home/bob-the-builder/meteor-build
export PATH=/home/bob-the-builder/.meteor/:$PATH
rm -rf /home/bob-the-builder/meteor-build/client
mkdir -p /home/bob-the-builder/meteor-build/client
echo "import './src/main.js'; " > /home/bob-the-builder/meteor-build/client/main.js
ln -s /src/src /home/bob-the-builder/meteor-build/client/src
ln -s /configured-sources/build-time-info.js /home/bob-the-builder/meteor-build/client/build-time-info.js
node ./node_modules/meteor-build-client/main.js ../out
END_HEREDOC
)

runuser -l bob-the-builder -c "$BOBS_SCRIPT"
